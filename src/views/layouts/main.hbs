        crossorigin="anonymous"></script>

    <script>
        function sendId() {
            var userId = {
                id_usuario: document.getElementById('id_usuario').textContent
            }

            fetch('/perfil', {
                method: 'POST',
                body: JSON.stringify(userId),
                headers: {
                    'Content-Type': 'application/json'
                }
            })
        }
    </script>
    <script src="js/main.js"></script>

</body>

</html>